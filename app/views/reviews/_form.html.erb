<%= simple_form_for @review do |f| %>
  <%= f.input :title %>
  <%= f.input :restaurant %>
  <%= f.input :address, as: :string %>
  <%= f.input :body %>
  <%= f.input :cuisine %>
  <%= f.input :score %>
  <%= f.input :price, as: :radio_buttons, collection: [['$', '1'], ['$$', '2'], ['$$$', '3']] %>
  <%= f.input :ambiance %>
  <%= f.button :submit, "Save Review" %>
<% end %>
